@model IEnumerable<MyBlog.Presentation.Areas.Author.Models.SubjectVMs.SubjectListVM>

@{
    ViewData["Title"] = "GetSubjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Popular Subjects</h1>
    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <span class="subject-name">@Html.DisplayFor(modelItem => item.Name)</span>
                <a class="btn btn-outline-dark" asp-controller="Home" asp-action="GetArticles" asp-route-id="@item.Id">Articles</a>
            </div>
        }
    </div>
</div>

<style>
    .subject-name {
        font-size: 1.2rem;
        font-weight: 500;
    }

    .list-group-item {
        transition: background-color 0.3s ease;
    }

        .list-group-item:hover {
            background-color: #f8f9fa;
        }

    .btn-outline-dark {
        font-size: 0.9rem;
        padding: 0.375rem 0.75rem;
    }
</style>
